{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es6"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node", "@types/jest"],
      "typeRoots" : ["./node_modules/@types"],
      "target": "es5",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"]
  }